 <div class="album py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-4">Search Results</h2>
        
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each recipesFound}}  
       <div class="col">
          <div class="card shadow-sm">
            {{!-- <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"> --}}
                <title>Placeholder</title>
                <!-- <rect width="100%" height="100%" fill="#55595c"/> -->
                <div id="image-recipe-container">
                  <a href="recipes/{{this._id}}"><img src="{{this.image}}" id="recipes-images" width="100%" preserveAspectRatio="xMidYMid slice" /></a>
                </div>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em"></text>
            
            </svg>

            <div class="card-body">
                <h5><strong>{{this.title}}</strong></h5>
              <!-- <p class="card-text">{{this.origin}}This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary details"><a href="recipes/{{this._id}}">Details</a></button>
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Like</button> -->
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        </div>
      </div>
    </div>
  </div>