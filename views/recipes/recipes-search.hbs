<!-- Search results stylesheet -->

 <div class="album py-5 bg-light">
    <div class="container">
      <h2 class="text-center mb-4">Search Results</h2>
        
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each recipesFound}}
        <!-- Image container -->  
       <div class="col">
          <div class="card shadow-sm">
                <div id="image-recipe-container">
                  <a href="recipes/{{this._id}}"><img src="{{this.image}}" id="recipes-images" width="100%" preserveAspectRatio="xMidYMid slice" /></a>
                </div>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em"></text>

            <!-- Title, details and duration container -->
            <div class="card-body">
                <h5><strong>{{this.title}}</strong></h5>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary details"><a href="recipes/{{this._id}}">Details</a></button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        </div>
      </div>
    </div>
  </div>