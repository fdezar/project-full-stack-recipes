<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="{{recipe.image}}" class="img-fluid" alt="recipe-image">
        </div>

        <div class="col-md-6">
            <h1>{{recipe.title}}</h1>

            <div class="d-flex align-items-center">
                <img src="{{recipe.user.profileImage}}" class="img-fluid rounded-circle" alt="profile-image">
                <p>{{recipe.user.firstName}}Â {{recipe.user.lastName}}</p>
                <p class="ml-2">@{{recipe.user.username}}</p>
            </div>

            <p>{{recipe.description}}</p>

            {{#if canEdit }}
                <a href="/recipes/{{recipe._id}}/edit" class="btn btn-primary">Edit recipe</a>
                <a href="/recipes/{{recipe._id}}/delete" class="btn btn-danger">Delete recipe</a>
            {{/if}}

            <h3>Ingredients</h3>
            <p>{{recipe.ingredients}}</p>

            <i class="fa-regular fa-clock"></i><p>{{recipe.duration}} minutes</p>

            <i class="fa-regular fa-user"></i><p>{{recipe.rations}} rations</p>

            <h3>Recipe Steps</h3>
            <p>{{recipe.steps}}</p>

            {{!-- <h3>Likes</h3>
            <p>Likes received:</p>
            <a href="#" class="btn btn-success">Like this recipe</a> --}}

            <h3>Comments</h3>
            {{#unless recipe.comments}}
                <p>No comments yet!</p>
            {{/unless}}
            
            {{#each recipe.comments}}
                <p><b>{{this.author}}:</b> {{this.content}}</p>
            {{/each}}

            <hr>

            <h3>Add comment</h3>
            <form action="/recipes/{{recipe._id}}/comment" method="post">
                <textarea name="content" cols="30" rows="2" class="form-control"></textarea>
                <br>
                <button type="submit" class="btn btn-primary">Comment</button>
            </form>

            <hr>
            
            <a href="/auth/{{recipe.user._id}}" class="btn btn-info">See {{recipe.user.username}}'s profile</a>
