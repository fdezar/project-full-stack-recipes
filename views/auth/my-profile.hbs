<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome {{username}} to your profile page!</h2>

    <!-- User container -->
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="{{profileImage}}" id="user-icon" class="card-img-top rounded-circle" alt="user-icon">
                <div class="card-body">
                    <h3 class="card-title">{{firstName}} {{lastName}}</h3>
                    <p class="card-text profile-description">@{{username}}</p>
                    <p class="card-text profile-description">{{email}}</p>
                    <a href="/auth/{{_id}}/edit" class="btn btn-outline-dark exclude-btn">Edit Profile</a>
                    <a href="/auth/{{_id}}/delete" class="btn btn-outline-danger exclude-btn">Delete Profile</a>
                </div>
            </div>
        </div>

        <!-- About container -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title" id="my-recipes-title">About</h3>
                    <p>{{aboutMe}}</p>
                </div>
            </div>

        <!-- User's recipes container -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title" id="my-recipes-title">My recipes</h3>
                    <ul class="list-group">
                        {{#each myRecipes}}
                            <li class="list-group-item">
                                <a id="my-profile-my-recipes" href="/recipes/{{this._id}}">
                                    <p class="my-profile-recipe">{{this.title}}</p>
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                    <a href="/recipes/create" class="btn btn-success mt-3">Create a new Recipe</a>
                </div>
            </div>

            {{!-- <div class="card mt-4">
                <div class="card-body">
                    <h3 class="card-title">Recipes Liked</h3>
                    
                </div>
            </div> --}}

        </div>
    </div>
</div>