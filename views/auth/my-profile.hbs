<div class="container mt-5">
    {{#if canEdit }}
    <h2 class="text-center mb-4">Welcome {{user.username}} to your profile page!</h2>
    {{else}}
    <h2 class="text-center mb-4">Welcome to {{user.username}}'s profile page!</h2>
    {{/if}}

    <!-- User container -->
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="{{user.profileImage}}" id="user-icon" class="card-img-top rounded-circle" alt="user-icon">
                <div class="card-body">
                    <h3 class="card-title">{{user.firstName}} {{user.lastName}}</h3>
                    <p class="card-text profile-description">@{{user.username}}</p>
                    <p class="card-text profile-description">{{user.email}}</p>
                    {{#if canEdit }}
                    <a href="/auth/{{user._id}}/edit" class="btn btn-outline-dark exclude-btn">Edit Profile</a>
                    <a href="/auth/{{user._id}}/delete" class="btn btn-outline-danger exclude-btn">Delete Profile</a>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- About container -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title" id="my-recipes-title">About</h3>
                    <p>{{user.aboutMe}}</p>
                </div>
            </div>

        <!-- User's recipes container -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    {{#if canEdit }}
                    <h3 class="card-title" id="my-recipes-title">My recipes</h3>
                    {{else}}
                    <h3 class="card-title" id="my-recipes-title">{{user.username}}'s recipes</h3>
                    {{/if}}
                    <ul class="list-group">
                        {{#each user.myRecipes}}
                            <li class="list-group-item">
                                <a id="my-profile-my-recipes" href="/recipes/{{this._id}}">
                                    <p class="my-profile-recipe">{{this.title}}</p>
                                </a>
                            </li>
                        {{/each}}
                    </ul>

                    {{#if canEdit}}
                    <a href="/recipes/create" class="btn btn-success mt-3">Create a new Recipe</a>
                    {{/if}}
                </div>
            </div>

            {{!-- <div class="card mt-4">
                <div class="card-body">
                    <h3 class="card-title">Recipes Liked</h3>
                    
                </div>
            </div> --}}

        </div>
    </div>
</div>